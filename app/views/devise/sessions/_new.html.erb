
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

    <p class="social-login">
      <span class="social-login-facebook"><a href="/users/auth/facebook"><i class="fa fa-facebook"></i> Facebook登入</a></span>
    </p>

    <div class="lined-text"><span>使用您的帳號登入</span><hr></div>

    <p class="fieldset field">
      <label class="image-replace cd-email" for="signin-email">E-mail</label>
      <%= f.email_field :email, autofocus: true, class: "full-width has-padding has-border", placeholder: "登陸郵件" %>
      <span class="cd-error-message">Error message here!</span>
    </p>

    <p class="fieldset field">
      <label class="image-replace cd-password" for="signin-password">Password</label>
      <%= f.password_field :password, autocomplete: "off", class: "full-width has-padding has-border", placeholder: "登錄密碼" %>
      <span class="cd-error-message">Error message here!</span>
    </p>

    <% if devise_mapping.rememberable? -%>
    <p class="fieldset field">
      <%= f.check_box :remember_me %>
      <label for="remember-me">記住我</label>
    </p>
    <% end -%>

    <p class="fieldset actions">
      <%= f.submit "登錄", class: "full-width" %>
    </p>
<% end %>

