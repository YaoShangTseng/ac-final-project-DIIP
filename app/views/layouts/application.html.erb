<!DOCTYPE html>
<html>
  <head>
    <title>DIIP</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <meta name="viewport" content="width=device-width; initial-scale=1">
    <%= favicon_link_tag "favicon.ico", type: 'image/png'%>
  </head>

  <body>
    <div class="wrapper">
      <!--=== Header ===-->
      <div class="header">
        <div class="container">
          <!-- Logo -->
          <a class="logo" href="#">
            <%= image_tag ("diip-logo.png"), style: "max-width: 70px;" %>
          </a>
          <!-- End Logo -->

          <!-- Self Dropdown -->
          <% if current_user %>
          <div class="navbar-nav">
            <div>
              <%= "Hi, #{current_user.email}" %>
            </div>

            <div class="btn-group pull-right">
              <button type="button" class="btn-u">Profile</button>
              <button type="button" class="btn-u btn-u-split dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
                <i class="fa fa-user"></i>
                <span class="sr-only">Toggle Dropdown</span>
              </button>
              <ul class="dropdown-menu" role="menu">
                <li><a href="#"><i class="fa fa-list"></i>  <%= link_to "修改資料", edit_registration_path(:user) %></a></li>
                <li class="divider"></li>
                <li><a href="#"><i class="fa fa-cloud-download"></i> <%= link_to "登出", destroy_user_session_path, :method => :delete %></a></li>
              </ul>
            </div>
          </div>
          <% end %>
          <!-- End Self Dropdown -->

          <!-- Toggle get grouped for better mobile display -->
          <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-responsive-collapse">
            <span class="sr-only">Toggle navigation</span>
            <span class="fa fa-bars"></span>
          </button>
          <!-- End Toggle -->
        </div><!--/end container-->

        <!-- Collect the nav links, forms, and other content for toggling -->
        <div class="collapse navbar-collapse mega-menu navbar-responsive-collapse">
          <div class="container">
            <ul class="nav navbar-nav">
              <% if current_user && current_user.profile %>
                <li class="dropdown">
                    <%= link_to "個人資料", empty_profiles_path %>
                </li>
                <li class="dropdown">
                    <%= link_to "任務專區", "#" %>
                </li>
                <li class="dropdown">
                    <%= link_to "搜尋同好", profiles_path %>
                </li>
              <% end %>
            </ul>
          </div><!--/end container-->
        </div><!--/navbar-collapse-->
      </div>
      <!--=== End Header ===-->

  <body>
    <div class="container">
      <div class="row">
        <div class="col-md-12">
          <% if flash[:notice].present? %>
            <div class="alert alert-success">
              <%= flash[:notice] %>
            </div>
          <% end %>
          <% if flash[:alert].present? %>
            <div class="alert alert-danger">
              <%= flash[:alert] %>
            </div>
          <% end %>
        </div>
      </div>

      <%= yield %>
    </div>
  </body>
</html>
