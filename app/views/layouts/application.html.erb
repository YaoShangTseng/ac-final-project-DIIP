<!DOCTYPE html>
<html>
  <head>
    <title>DIIP</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <meta name="viewport" content="width=device-width; initial-scale=1">
    <%= favicon_link_tag "favicon.ico", type: 'image/png'%>

  </head>

  <body>

    <%# if @show_nitification.present? %>
      <%#= render partial: "shared/notification" %>
    <%# end %>

    <div class="wrapper">
      <!--=== Header ===-->
      <div class="header">
        <div class="container col-md-12" style="background-color: #f8f8f8;border: 1px solid transparent;border-color: #e7e7e7; padding: 3px">
          <!-- Logo -->
          <div class="pull-left" style="margin-left: 5px">
            <a class="logo" href="#">
              <%= image_tag ("diip_logo.png"), style: "max-width: 70px;position: relative;top: 0.4em;" %>
            </a>
          </div>
          <!-- End Logo -->

          <div style="display:inline-block; margin-left: 10px;height: 53px;width:50vw">
              <div>
                <% if flash[:notice].present? %>
                  <div class="alert alert-success">
                    <%= flash[:notice] %>
                  </div>
                <% end %>
                <% if flash[:alert].present? %>
                  <div class="alert alert-danger">
                    <%= flash[:alert] %>
                  </div>
                <% end %>
              </div>
          </div>

          <!-- Self Dropdown -->
          <% if current_user %>
          <div class="navbar-nav pull-right" style="position:relative;top: 0.7em">
            <div class="btn-group">
              <button type="button" class="btn-u">Profile</button>
              <button type="button" class="btn-u btn-u-split dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
                <i class="fa fa-user"></i>
                <span class="sr-only">Toggle Dropdown</span>
              </button>
              <ul class="dropdown-menu" role="menu" style="left: -55%;">
                <li style="padding: 3px 13px;">
                  <i class="fa fa-heart"></i>
                  <%= "#{current_user.email}" %>
                </li>
                <li>
                  <%= link_to edit_registration_path(:user) do %>
                  <i class="fa fa-list"></i>
                  註冊資料
                  <% end %>
                </li>
                <li class="divider"></li>
                <li>
                  <%= link_to destroy_user_session_path, :method => :delete do %>
                  <i class="fa fa-cloud-download"></i>
                  我要登出
                  <% end %>
                </li>
              </ul>
            </div>

            <button class="btn rounded btn-info" style="width: 103.4px">
              <%= link_to "我要登出", destroy_user_session_path, :method => :delete, style: "color: white;" %>
            </button>
          </div>
          <% end %>
          <!-- End Self Dropdown -->
        </div><!--/end container-->
      </div>
      <!--=== End Header ===-->
    <div class="container col-md-12">
      <%= yield %>
    </div>
  </div>
  <!-- End Wrap -->
  </body>
</html>
