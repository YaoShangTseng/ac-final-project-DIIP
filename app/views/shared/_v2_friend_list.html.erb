<% if @friendships.present? %>
  <% @friendships.each do |friendship| %>
    <div>
      <%#= friendship.love_level %>
      <% if friendship.mission_open? %>
        <%#= link_to "任務表單", friendships_list_path(friend_id: friendship.friend.id) %>
        <div class="col-sm-6 sm-margin-bottom-20">
          <div class="profile-blog">
            <img class="rounded-x" src="assets/img/testimonials/img1.jpg" alt="">
            <div class="name-location">
             <strong><%= link_to friendship.friend.profile.nickname, v2_interactions_list_path(friend_id: friendship.friend.id), "data-turbolinks" => false %></strong>

              <% if friendship.mission_remain? %>
                <%= "有任務未完成喔~" %>
              <% end %>
            <span><i class="fa fa-map-marker"></i><a href="#">California,</a> <a href="#">US</a></span>
            <hr>
            <ul class="list-inline share-list">
              <li><i class="fa fa-bell"></i><a href="#">12 Notifications</a></li>
              <li><i class="fa fa-group"></i><a href="#">54 Followers</a></li>
              <li><i class="fa fa-share"></i><a href="#">Share</a></li>
            </ul>
            <section id="mission-list">
              <%= render partial: "shared/v2_mission_list" %>
            </section>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>
<% end %>

