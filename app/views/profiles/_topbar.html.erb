<!-- Self Dropdown -->
<% if current_user %>
<div class="navbar-nav pull-right" style="position:relative;top: -55px;left:-85px">
  <div class="btn-group">

  <button class="btn-u rounded" style="width: 103.4px;margin-right:15px">
    <%= link_to profile_path(current_user.profile), style: "color:white" do %>
      <i class="fa fa-user"></i>
      個人介面
    <% end %>
  </button>

  <button class="btn-u rounded" style="width: 103.4px;margin-right:15px">
    <span class="badge badge-red rounded-x pull-right" style="position:relative;left:20px;top:-15px">
    <%= check_mission_open_number %>
    </span>
    <%= link_to v2_interactions_list_path, style: "color:white" do %>
      <i class="fa fa-heartbeat"></i>
      任務專區
    <% end %>
  </button>

  <button class="btn-u rounded" style="width: 103.4px;margin-right:15px">
    <%= link_to profiles_path, style: "color:white" do %>
      <i class="fa fa-user-plus"></i>
      搜尋同好
    <% end %>
  </button>

    <button type="button" class="btn-u">設定</button>
    <button type="button" class="btn-u btn-u-split dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
      <i class="fa fa-cog"></i>
      <span class="sr-only">Toggle Dropdown</span>
    </button>
    <ul class="dropdown-menu" role="menu" style="left: 64.5%;">
      <li style="padding: 3px 13px;">
        <i class="fa fa-heart"></i>
        <%= "#{current_user.email}" %>
      </li>
      <li>
        <%= link_to edit_registration_path(:user) do %>
        <i class="fa fa-list"></i>
        註冊資料
        <% end %>
      </li>
      <li>
        <%= link_to edit_profile_path(current_user.profile) do %>
        <i class="fa fa-user"></i>
        個人資料
        <% end %>
      </li>
      <li class="divider"></li>
      <li>
        <%= link_to destroy_user_session_path, :method => :delete do %>
        <i class="fa fa-cloud-download"></i>
        我要登出
        <% end %>
      </li>
    </ul>
  </div>
</div>
<% end %>