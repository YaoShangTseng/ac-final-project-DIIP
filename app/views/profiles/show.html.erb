    <%= render :partial => "topbar" %>
    <%= render :partial => "left_sidebar" %>

<div class="col-md-9 profile">
  <div class="col-md-12" style="border-left: 4px solid #D8D8D8;margin-left:20px;padding-left:50px">
  <!--   <div id="QA_block">
      <%= render partial: "answers/QA_block" %>
    </div> -->

  <% @profile.answers.each do |answer| %>
    <% if answer.question.present? %>
    <div style="border: 4px solid #66BAB7;border-radius: 20px;margin-bottom:20px;">
      <div style="font-size: 36px;color: #66BAB7;letter-spacing: 0px;margin-left:10px;line-height:30px">
        <p style="position:relative;top:15px;color: #66BAB7;">Q:&nbsp;<%= answer.question.content %></p>
          <div>
            <ul class="nav navbar-nav navbar-right", style="margin-right: 10px; margin-top: -30px" >

              <% if @profile.is_current_user?(current_user) %>
                <li>
                  <%= link_to profile_path(@profile, aid: answer.id),style: "padding:0px 20px" do %>
                    <i class="fa fa-pencil"></i>
                  <% end %>
                </li>
                <li>
                  <%= link_to profile_answer_path(@profile, answer), method: :delete,style: "padding:0px 20px" do %>
                    <i class="fa fa-times"></i>
                  <% end %>
                </li>
              <% else %>

                <% if answer.liked?(current_user) %>
                  <li>
                    <%= link_to like_path("#"), class: "disabled",style: "padding:0px" do %>
                      <i class="fa fa-heart"></i>
                    <% end %>
                  </li>
                <% else %>
                  <li>
                    <%= link_to like_path(friendship_id: @friendship.id, answer_id: answer.id), method: :post,style: "padding:0px" do %>
                      <i class="fa fa-heart-o"></i>
                    <% end %>
                  </li>
                <% end %>

              <% end %>
            </ul>
          </div>
        <hr class="hr-sm">
      </div>
    <% end %>
      <div style="font-size: 36px;color: #66BAB7;letter-spacing: 0px;margin-left:10px">
        <p style="position:relative;top:-15px;color: #66BAB7;">A:&nbsp;<%= answer.content %></p>
      </div>
    </div>
  <% end %>
  </div>
</div>

